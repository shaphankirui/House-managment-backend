// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String  @unique
  password  String
  firstName String
  lastName  String?
  Blog      Blog[]
  Order     Order[]
  News      News[]
  Tenders      Tenders[]
  Careers      Careers[]
  House      House[]

  @@map("users")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  pictureUrl String?
  // postedBy String?
  slug String?
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("blogs")
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  pictureUrl   String?
  model  String
  SAP   String?
  availability Boolean? @default(true)
  quantity     Int?
  countable    Boolean? @default(true)
  price        Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  categoryId     Int

category  Category @relation(fields: [categoryId], references: [id])

  @@map("products")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  pictureUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Product     Product[]


  @@map("categories")
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items     Json     // Store order items as JSON
  total     Float
  status    String
  payment   Float
  customer  String
  location  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  @@map("orders")
  }

  
model News {
   id        Int      @id @default(autoincrement())
  title     String
  body      String
  pictureUrl String?
  slug String?
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  @@map("news")
}

model Team {
  id          Int      @id @default(autoincrement())
  fullName        String
  position        String
  email String
  phone String
  is_active Boolean
  pictureUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  @@map("team")
}
model Tenders {
  id          Int      @id @default(autoincrement())
  title        String
  slug String?
  description String
  aplicationDateLine String
  is_open Boolean
  fileUrl  String?
  pictureUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])


  @@map("tenders")
}
model Careers {
  id          Int      @id @default(autoincrement())
  title        String
  slug String?
  description String
  requirements String
  aplicationDateLine String
  is_open Boolean
  fileUrl  String?
  pictureUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])


  @@map("careers")
}

model House {
  id          Int      @id @default(autoincrement())
  title        String
  slug String?
  description String
  price String
  is_open Boolean
  fileUrl  String?
  pictureUrl  String[]  // Change to an array of strings
  country  String?
  county  String?
  mapAdress  String?
  latitude  String?
  longitude  String?
  interiorDetails  String[]  // Change to an array of strings
  outdoorDetails  String[]  // Change to an array of strings
  Utilities  String[]  // Change to an array of strings
  otherFeatures  String[]  // Change to an array of strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("houses")
}